<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlayFragment">

    <ImageView
        android:id="@+id/btn_main"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/ico_arrow_left"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/purple_500" />


    <TextView
        android:id="@+id/f_touch_game_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time : 2.34 sec"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnGoal"/>

    <TextView
        android:id="@+id/btnGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOAL"
        android:textSize="15dp"
        android:textColor="@color/purple_500"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:layout_marginBottom="5dp"

        android:background="@drawable/touch_game_btn_rectangle_back"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/f_touch_game_tv_time"
        app:layout_constraintBottom_toTopOf="@id/f_touch_game_tv_goal_num"/>

    <TextView
        android:id="@+id/f_touch_game_tv_goal_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGoal"
        app:layout_constraintBottom_toTopOf="@id/f_touch_game_tv_enter_num"/>

    <TextView
        android:id="@+id/f_touch_game_tv_enter_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your num"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#AAAAAA"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/f_touch_game_tv_goal_num"
        app:layout_constraintBottom_toTopOf="@id/f_touch_game_btn_1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/f_touch_game_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/purple_500"
        android:textSize="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"

        android:layout_marginTop="260dp"

        android:background="@drawable/touch_game_btn_circle_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/f_touch_game_btn_2"
        app:layout_constraintBottom_toTopOf="@id/f_touch_game_btn_4"/>

    <TextView
        android:id="@+id/f_touch_game_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="@color/purple_500"
        android:textSize="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"

        android:background="@drawable/touch_game_btn_circle_back"
        app:layout_constraintStart_toEndOf="@id/f_touch_game_btn_1"
        app:layout_constraintEnd_toStartOf="@id/f_touch_game_btn_3"
        app:layout_constraintTop_toTopOf="@id/f_touch_game_btn_1"
        app:layout_constraintBottom_toBottomOf="@id/f_touch_game_btn_1"/>

    <TextView
        android:id="@+id/f_touch_game_btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/purple_500"
        android:textSize="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"

        android:background="@drawable/touch_game_btn_circle_back"
        app:layout_constraintStart_toEndOf="@id/f_touch_game_btn_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/f_touch_game_btn_1"
        app:layout_constraintBottom_toBottomOf="@id/f_touch_game_btn_1"/>

    <TextView
        android:id="@+id/f_touch_game_btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="@color/purple_500"
        android:textSize="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"

        android:background="@drawable/touch_game_btn_circle_back"
        app:layout_constraintTop_toBottomOf="@id/f_touch_game_btn_1"
        app:layout_constraintBottom_toTopOf="@id/f_touch_game_btn_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/f_touch_game_btn_5"/>

    <TextView
        android:id="@+id/f_touch_game_btn_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/purple_500"
        android:textSize="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"

        android:background="@drawable/touch_game_btn_circle_back"
        app:layout_constraintTop_toTopOf="@id/f_touch_game_btn_4"
        app:layout_constraintBottom_toBottomOf="@id/f_touch_game_btn_4"
        app:layout_constraintStart_toEndOf="@id/f_touch_game_btn_4"
        app:layout_constraintEnd_toStartOf="@id/f_touch_game_btn_6"/>

    <TextView
        android:id="@+id/f_touch_game_btn_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textColor="@color/purple_500"
        android:textSize="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"

        android:background="@drawable/touch_game_btn_circle_back"
        app:layout_constraintTop_toTopOf="@id/f_touch_game_btn_4"
        app:layout_constraintBottom_toBottomOf="@id/f_touch_game_btn_4"
        app:layout_constraintStart_toEndOf="@id/f_touch_game_btn_5"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/f_touch_game_btn_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textColor="@color/purple_500"
        android:textSize="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"

        android:background="@drawable/touch_game_btn_circle_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/f_touch_game_btn_8"
        app:layout_constraintTop_toBottomOf="@id/f_touch_game_btn_4"
        app:layout_constraintBottom_toTopOf="@id/f_touch_game_btn_clear" />

    <TextView
        android:id="@+id/f_touch_game_btn_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textColor="@color/purple_500"
        android:textSize="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"

        android:background="@drawable/touch_game_btn_circle_back"
        app:layout_constraintTop_toTopOf="@id/f_touch_game_btn_7"
        app:layout_constraintBottom_toBottomOf="@id/f_touch_game_btn_7"
        app:layout_constraintStart_toEndOf="@id/f_touch_game_btn_7"
        app:layout_constraintEnd_toStartOf="@id/f_touch_game_btn_9" />

    <TextView
        android:id="@+id/f_touch_game_btn_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textColor="@color/purple_500"
        android:textSize="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"

        android:background="@drawable/touch_game_btn_circle_back"
        app:layout_constraintStart_toEndOf="@id/f_touch_game_btn_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/f_touch_game_btn_7"
        app:layout_constraintBottom_toBottomOf="@id/f_touch_game_btn_7"/>

    <TextView
        android:id="@+id/f_touch_game_btn_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/purple_500"
        android:textSize="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"

        android:background="@drawable/touch_game_btn_circle_back"
        app:layout_constraintTop_toTopOf="@id/f_touch_game_btn_clear"
        app:layout_constraintBottom_toBottomOf="@id/f_touch_game_btn_clear"
        app:layout_constraintStart_toEndOf="@id/f_touch_game_btn_clear"
        app:layout_constraintEnd_toStartOf="@id/f_touch_game_btn_back" />

    <TextView
        android:id="@+id/f_touch_game_btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"

        android:background="@drawable/touch_game_btn_circle_back_fill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/f_touch_game_btn_7"
        app:layout_constraintEnd_toStartOf="@id/f_touch_game_btn_0"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/f_touch_game_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âŒ«"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"

        android:background="@drawable/touch_game_btn_circle_back_fill"
        app:layout_constraintStart_toEndOf="@id/f_touch_game_btn_0"
        app:layout_constraintTop_toTopOf="@id/f_touch_game_btn_clear"
        app:layout_constraintBottom_toBottomOf="@id/f_touch_game_btn_clear"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>