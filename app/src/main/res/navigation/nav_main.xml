<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/entryFragment">

    <fragment
        android:id="@+id/PlayFragment"
        android:name="com.example.mynavapplication.PlayFragment"
        tools:layout="@layout/fragment_play">
        <action
            android:id="@+id/action_PlayFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <action
            android:id="@+id/action_PlayFragment_to_entryFragment"
            app:destination="@id/entryFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.mynavapplication.ResultFragment"
        tools:layout="@layout/fragment_result">
        <action
            android:id="@+id/action_resultFragment_to_PlayFragment"
            app:destination="@id/PlayFragment"
            app:popUpTo="@id/PlayFragment" />
    </fragment>
    <fragment
        android:id="@+id/entryFragment"
        android:name="com.example.mynavapplication.entryFragment"
        android:label="fragment_entry"
        tools:layout="@layout/fragment_entry">
        <action
            android:id="@+id/action_entryFragment_to_PlayFragment"
            app:destination="@id/PlayFragment" />
    </fragment>
</navigation>